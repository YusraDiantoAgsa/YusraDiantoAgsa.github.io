        <div id="container">
            <form action="">
            Nama : <input type="text" placeholder="Isi nama anda" name="data_nama" id="data_nama">
            Password : <input type="password" placeholder="Password" name="data_pw" id="data_pw">
            </form>
            <button onclick="tampilData()">Proses</button>
